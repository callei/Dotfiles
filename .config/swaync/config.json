{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "bottom",
    "layer": "overlay",
    "control-center-layer": "top",
    "layer-shell": true,
    "cssPriority": "user",
    "control-center-width": 350,
    "control-center-margin-top": 8,
    "control-center-margin-bottom": 8,
    "control-center-margin-right": 12,
    "control-center-margin-left": 8,
    "notification-2fa-action": true,
    "notification-inline-replies": true,
    "notification-window-width": 350,
    "notification-icon-size": 60,
    "notification-body-image-height":  180,
    "notification-body-image-width": 180,
    "timeout": 12,
    "timeout-low": 6,
    "timeout-critical": 1,
    "fit-to-screen": true,
    "keyboard-shortcuts": true,
    "image-visibility": "when available",
    "transition-time": 200,
    "hide-on-clear": false,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "mpris",
        "title",
        "notifications",
        "volume",
        "buttons-grid"
    ],
    "widget-config": {
        "title": {
            "text": "Notification Center",
            "clear-all-button": true,
            "button-text": "󰆴"
        },
        "label": {
            "max-lines":1,
            "text": "Notification Center!"
        },

        "mpris": {
            "image-size": 80,
            "image-radius": 0
        },
        "volume": {
            "label": "󰕾 "
        },
        
        "buttons-grid": {
            "actions": [
                {
                    "label": "󰝟",
                    "command": "$HOME/.local/bin/volume-control mute-toggle",
                    "type": "toggle",
                    "update-command": "pamixer --get-mute"
                },
                {
                    "label": "󰍭",
                    "command": "$HOME/.local/bin/volume-control mic-mute-toggle",
                    "type": "toggle",
                    "update-command": "pamixer --default-source --get-mute"
                },
                {
                    "label":"󰤄",
                    "command": "swaync-client -d",
                    "type":"toggle"
                },
                {
                    "label": "󰈙",
                    "command": "/usr/bin/xdg-open \"$HOME/Dokument\""
                },
                {
                    "label": "",
                    "command": "hyprlock"
                },
                {
                    "label": "󰖔 Kvällsläge",
                    "command": "$HOME/.config/hypr/scripts/night_mode_toggle.sh",
                    "type": "toggle",
                    "update-command": "$HOME/.config/hypr/scripts/check_night_mode.sh"
                }
            ]
        }
    }
}
